<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_pdf_preview" model="ir.ui.view">
        <field name="name">sale.order.form.pdf.preview.test</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="preview_test_file" string="Preview Test">
                    <group>
                        <field name="binary_preview_file" widget="binary"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
